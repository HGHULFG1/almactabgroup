<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_standard_packagelist_document">
        <t t-call="web.external_layout">

            <div class="page">
                <div class="oe_structure"/>

                <div class="row">
                    <div class="col-6">
                        <strong class="d-block mb-1">To :</strong>
                        <address t-field="doc.shipping_to_id"
                                 t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                    </div>
                    <div class="col-6">
                        <div>
                            <strong>Invoice Number :</strong>
                        </div>
                        <div>
                            <strong>Invoice Date :</strong>
                        </div>
                        <div>
                            <strong>Customer Ref :</strong>
                        </div>
                        <div>
                            <strong>Santech Ref :</strong>
                        </div>
                    </div>
                </div>

                <h2 class="mt-2">
                    Packing list
                </h2>

                <table class="table table-sm o_main_table">
                    <thead style="display: table-row-group">
                        <tr>
                            <th name="th_sequence" class="text-center">S/N</th>
                            <th name="th_country" class="text-center">CofO</th>
                            <th name="th_default_code" class="text-center">Part No.</th>
                            <th name="th_product" class="text-center">Description</th>
                            <th name="th_product_uom_qty" class="text-center">Qty</th>
                            <th name="th_type" class="text-center">Pkg</th>
                            <th name="th_marks" class="text-center">Marks</th>
                            <th name="th_width" class="text-center">Width</th>
                            <th name="th_height" class="text-center">Height</th>
                            <th name="th_length" class="text-center">Length</th>
                            <th name="th_weight" class="text-center">Weight</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="doc.packing_line" t-as="line">
                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type">
                                    <td name="td_sequence" class="text-center">
                                        <span t-field="line.sequence"/>
                                    </td>
                                    <td name="td_country" class="text-center">
                                        <span t-field="line.country_id"/>
                                    </td>
                                    <td name="td_default_code" class="text-center">
                                        <span t-field="line.default_code"/>
                                    </td>
                                    <td name="td_product" class="text-center">
                                        <span t-field="line.name"/>
                                    </td>
                                    <td name="td_product_uom_qty" class="text-center">
                                        <span t-field="line.product_uom_qty"/>
                                    </td>
                                    <td name="td_type" class="text-center">
                                        <span t-field="line.type_id"/>
                                    </td>
                                    <td name="td_marks" class="text-center">
                                        <span t-field="line.marks_id"/>
                                    </td>
                                    <td name="td_width" class="text-center">
                                        <span t-field="line.width_pack"/>
                                    </td>
                                    <td name="td_height" class="text-center">
                                        <span t-field="line.height_pack"/>
                                    </td>
                                    <td name="td_length" class="text-center">
                                        <span t-field="line.length_pack"/>
                                    </td>
                                    <td name="td_weight" class="text-center">
                                        <span t-field="line.weight_pack"/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td name="td_section_line" colspan="99">
                                        <span t-field="line.name"/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td name="td_note_line" colspan="99">
                                        <span t-field="line.name"/>
                                    </td>
                                </t>
                            </tr>
                        </t>

                    </tbody>
                </table>

                <div id="vendor_ids" t-if="doc.vendor_ids" class="mt-3">
                    <strong class="d-block mb-1">MANUFACTURED BY:</strong>
                    <p t-foreach="doc.vendor_ids" t-as="vendor" class="m-0">
                        <span t-field="vendor.street"/>
                        <span t-field="vendor.city"/>
                        <span t-field="vendor.state_id.name"/>
                        <span t-field="vendor.zip"/>.
                        <t t-if="vendor.phone">
                            Telephone :<span t-field="vendor.phone"/>.
                        </t>
                        <t t-if="vendor.website">
                            Website :<span t-field="vendor.website"/>.
                        </t>
                    </p>
                </div>

                <div t-if="doc.packing_term_ids" class="mt-3">
                    <strong class="d-block mb-1">Shipping Details:</strong>
                    <p t-foreach="doc.packing_term_ids" t-as="term" class="m-0">
                        <strong t-field="term.name"/>:
                        <span t-field="term.description"/>
                    </p>
                </div>

            </div>
        </t>
    </template>


    <template id="report_standard_packagelist">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="order_processing_packing.report_standard_packagelist_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>
</odoo>
