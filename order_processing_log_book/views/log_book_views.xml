<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="log_book_view_form" model="ir.ui.view">
        <field name="name">log.book.form</field>
        <field name="model">log.book</field>
        <field name="arch" type="xml">
            <form string="Log Book" create="false">
                <sheet string="Log Book">
                    <group>
                        <group>
                            <field name="log_book_type_id"/>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="date_deadline"/>
                            <field name="user_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>