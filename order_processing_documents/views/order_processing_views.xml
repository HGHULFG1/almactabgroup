<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="order_processing_view_form" model="ir.ui.view">
        <field name="name">order.processing.view.form.inherit.documents</field>
        <field name="model">order.processing</field>
        <field name="inherit_id" ref="order_processing.order_processing_view_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="%(documents.document_action)d"
                    context="{'search_default_owner_id': user_id, 'default_owner_id': user_id}"
                    class="oe_stat_button"
                    icon="fa-file-text"
                    type="action">
                    <field name="document_count" widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>
</odoo>
